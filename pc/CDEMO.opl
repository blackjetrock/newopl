   PRINT A.MESS$;
   AT 1,3
   USE C
   POSITION 1
   PRINT C.MESS$;
  ELSEIF L1%=3
   USE C
   POSITION 3
   PRINT C.MESS$;
  ELSEIF L1%=4
   UDG 0,0,4,14,4,0,14,0,31
   UDG 2,0,0,0,0,0,0,0,31
   PRINT CHR$(0);REPT$(CHR$(2),14)
   CLOCK(1)
   AT 1,3
   PRINT "Calc:45.27+15%"
   PRINT "    =";45.25+15 %
