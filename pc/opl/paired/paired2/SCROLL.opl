SCROLL:(P1%,P2%,P3$)
REM CM/XP procedure
REM Old globals: SCRLP%
LOCAL L1%,L2%

L1%=LEN(P3$)
WHILE L2%+16<=L1%
 L2%=L2%+1
 AT 1,P1%
 PRINT MID$(P3$,L2%,16)
 IF KEY
  RETURN
 ENDIF
 IF P2%
  PAUSE SCRLP%
  BEEP 50,200
  GOTO Lab1::
 ENDIF
 PAUSE SCRLP%
Lab1::
 IF L2%=1
  PAUSE 5*SCRLP%
 ENDIF
ENDWH
PAUSE 5*SCRLP%
