UDGKEY:
CLS
START::
AT 1,1 :PRINT CHR$(35);C%;" ";A.UNAM$
AT 14,1 :PRINT CHR$(127);CHR$(126);"Q"
IF M$>""
AT 1,2 :PRINT M$
ENDIF
K%=GET
IF K%=6 :REM RIGHT
NEXT
IF EOF
BEEP 50,100
LAST
GOTO START::
ENDIF
C%=C%+1
ELSEIF K%=5 :REM BACK
IF C%=1
BEEP 50,100
GOTO START::
ENDIF
BACK
C%=C%-1
ELSEIF K%=%Q OR K%=%Y OR K%=%N
RETURN
ENDIF
AT 1,1 :PRINT REPT$(" ",16)
GOTO START::
