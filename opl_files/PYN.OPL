PYN:(PROMPT1$,PROMPT2$)
REM Prompt for confirmation
LOCAL N$(1)
CLS
DO
 AT (22-LEN(PROMPT1$))/2,1
 PRINT PROMPT1$
 AT (22-LEN(PROMPT2$))/2,2
 PRINT PROMPT2$
 PRINT CHR$(25)
 AT 1,4
 PRINT"Confirm? Y/N"
 AT 14,4
 CURSOR ON
 N$=GET$
 CURSOR OFF
 IF UPPER$(N$)="Y"
  RETURN -1
 ELSEIF UPPER$(N$)="N" OR N$=CHR$(1)
  RETURN 0
 ENDIF
UNTIL 0
