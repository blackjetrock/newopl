footwidt:
LOCAL A$(15),FT,INS
PRINT "DISTANCE?"
AT 1,2
PRINT "Feet..."
INPUT FT
AT 1,2
PRINT "Inches..."
INPUT INS
D=FOOT:(FT,INS)
D=D*1000
CLS
PRINT "WHAT LENS in mm";CHR$(63)
INPUT L
CLS
W=(D*I)/L
H=(D*T)/L
W=INTF(W/10)
W=W/100
H=INTF(H/10)
H=H/100
D=D/1000
A$=metre$:(D)
PRINT "With",L,"mm lens"
PRINT "@",A$
A$=metre$:(H)
PRINT "HEIGHT",A$
A$=metre$:(W)
PRINT "WIDTH",A$
GET
