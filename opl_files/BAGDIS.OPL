BAGDIS:
LOCAL B$(6),P$(20)
LOCAL A%,B%
A%=158
P$=REPT$(CHR$(A%),20)
CLS :PRINT P$ :AT 1,2 :PRINT CHR$(A%) :AT 20,2 :PRINT CHR$(158) :AT 1,3 :PRINT CHR$(A%) :AT 20,3 :PRINT CHR$(A%) :AT 1,4 :PRINT P$
AT 5,3 :PRINT"(c) ";CHR$(2);" 04/91"
START::
AT 8,2 :PRINT"BAGELS" :PAUSE 10
AT 8,2 :B%=6 :DO
PRINT CHR$(INT(RND*3)+3);
BEEP 50,(INT(RND*5)+1)*100
B%=B%-1
UNTIL B%<=0
PAUSE 10 
IF KEY>0
RETURN
ENDIF
GOTO START::

